<?xml version="1.0"?>

<PropertyList>

    <path>switches.ac</path>

    <animation>
        <type>pick</type>
        <object-name>Lmag</object-name>
        <condition>
            <equals>
                <property>aircraft/magnetos/Lmag</property>
                <value>0</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/magnetos</property>
                <step>1</step>
                <min>0</min>
                <max>3</max>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/magnetos/Lmag</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Lmag</object-name>
        <condition>
            <equals>
                <property>aircraft/magnetos/Lmag</property>
                <value>1</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/magnetos</property>
                <step>-1</step>
                <min>0</min>
                <max>3</max>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/magnetos/Lmag</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Rmag</object-name>
        <condition>
            <equals>
                <property>aircraft/magnetos/Rmag</property>
                <value>0</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/magnetos</property>
                <step>2</step>
                <min>0</min>
                <max>3</max>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/magnetos/Rmag</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Rmag</object-name>
        <condition>
            <equals>
                <property>aircraft/magnetos/Rmag</property>
                <value>1</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/magnetos</property>
                <step>-2</step>
                <min>0</min>
                <max>3</max>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/magnetos/Rmag</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>Lmag</object-name>
        <type>rotate</type>
        <property>aircraft/magnetos/Lmag</property>
        <factor>-60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <object-name>Rmag</object-name>
        <type>rotate</type>
        <property>aircraft/magnetos/Rmag</property>
        <factor>-60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>starter</object-name>
        <condition>
            <equals>
                <property>controls/electric/battery-switch</property>
                <value>true</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine/starter</property>
                <value>true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/engines/engine/starter</property>
                    <value>false</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>batt</object-name>
        <condition>
            <equals>
                <property>controls/electric/battery-switch</property>
                <value>0</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/electric/battery-switch</property>
                <value>true</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/battery/switch</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>systems/electrical/outputs/comm[0]</property>
                <value>10</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/lighting/nav-lights</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>batt</object-name>
        <condition>
            <equals>
                <property>controls/electric/battery-switch</property>
                <value>1</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/electric/battery-switch</property>
                <value>false</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/battery/switch</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/ison</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/flydat/ison</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/flaps</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>systems/electrical/outputs/comm[0]</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/lighting/nav-lights</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>batt</object-name>
        <type>rotate</type>
        <property>aircraft/battery/switch</property>
        <factor>60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>starter</object-name>
        <property>controls/engines/engine/starter</property>
        <factor>0.004</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>avionics</object-name>
        <condition>
            <and>
                <equals>
                    <property>controls/electric/battery-switch</property>
                    <value>true</value>
                </equals>
                <equals>
                    <property>aircraft/ipad/ison</property>
                    <value>0</value>
                </equals>
            </and>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/ison</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/screen</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/error</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>avionics</object-name>
        <condition>
            <equals>
                <property>aircraft/ipad/ison</property>
                <value>1</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/ison</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>avionics</object-name>
        <type>rotate</type>
        <property>aircraft/ipad/ison</property>
        <factor>-60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>flydat</object-name>
        <condition>
            <and>
                <equals>
                    <property>controls/electric/battery-switch</property>
                    <value>true</value>
                </equals>
                <equals>
                    <property>aircraft/flydat/ison</property>
                    <value>0</value>
                </equals>
            </and>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/flydat/ison</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>flydat</object-name>
        <condition>
            <equals>
                <property>aircraft/flydat/ison</property>
                <value>1</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/flydat/ison</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>flydat</object-name>
        <type>rotate</type>
        <property>aircraft/flydat/ison</property>
        <factor>-60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>flaps</object-name>
        <condition>
            <equals>
                <property>controls/electric/battery-switch</property>
                <value>true</value>
            </equals>
        </condition>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/flaps</property>
                <step>0.33333333333333</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>flaps</object-name>
        <action>
            <button>1</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/flaps</property>
                <step>-0.33333333333333</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>flaps</object-name>
        <type>rotate</type>
        <property>surface-positions/flap-pos-norm</property>
        <factor>60</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>