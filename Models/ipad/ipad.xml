<?xml version="1.0"?>

<PropertyList>

    <path>ipad.ac</path>

    <animation>
        <object-name>charts</object-name>
        <object-name>chartsscreen</object-name>
        <object-name>checklists</object-name>
        <object-name>welcome</object-name>
        <object-name>time</object-name>
        <type>select</type>
        <condition>
            <equals>
            <property>aircraft/ipad/ison</property>
            <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <object-name>blackscreen</object-name>
        <type>select</type>
        <condition>
            <equals>
            <property>aircraft/ipad/error</property>
            <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <object-name>charts</object-name>
        <object-name>checklists</object-name>
        <object-name>welcome</object-name>
        <type>select</type>
        <condition>
            <equals>
            <property>aircraft/ipad/screen</property>
            <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>homebutton</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/screen</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>charts</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/screen</property>
                <value>2</value>
            </binding>
        </action>
    </animation>

    <animation>
        <object-name>chartsscreen</object-name>
        <type>select</type>
        <condition>
            <equals>
            <property>aircraft/ipad/screen</property>
            <value>2</value>
            </equals>
        </condition>
    </animation>

<text>
    <!-- It should have a name. Can be used for other animations -->
    <name>time</name>
    <!-- Use offsets for the initial placement -->
    <offsets>
        <pitch-deg>90</pitch-deg>
        <heading-deg>0</heading-deg>
        <roll-deg>90</roll-deg>
        <x-m>0.007</x-m>
        <y-m>0</y-m>
        <z-m>0.218302</z-m>
    </offsets>


    <!-- The string value of a property -->
    <type type="string">text-value</type>
    <property type="string">sim/time/local-time-string</property>
    <format type="string">%s</format> <!-- the sprintf() format to display the value -->
 
    <layout>left-to-right</layout> <!-- default -->
    <!--
    <layout>right-to-left</layout>
    <layout>vertical</layout>
    -->
  
    <draw-text type="bool">true</draw-text> <!-- draw the text itself -->
    <draw-alignment type="bool">false</draw-alignment> <!-- draw crosshair at object center -->
    <draw-boundingbox type="bool">false</draw-boundingbox> <!-- draw a bounding box -->
 
    <font>Helvetica.txf</font> <!-- The font file name, relative to data/Fonts -->
    <character-size type="double">0.007157</character-size> <!-- size (height) im meters -->
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <max-height>0.01</max-height> <!-- the maximum height of the text -->
    <max-width>0.13</max-width> <!-- the maximum width of the text -->
    <font-resolution>
        <width type="int">32</width>
        <height type="int">32</height>
    </font-resolution>
 
    <!-- chose one of the kerning types or omit for default -->
    <kerning>default</kerning>
    <!--
    <kerning>unfitted</kerning>
    <kerning>none</kerning>
    -->
 
    <alignment>center-center</alignment> <!-- alignment of the text itself -->
    <!-- possible values are
    <alignment>left-top</alignment>
    <alignment>left-center</alignment>
    <alignment>left-bottom</alignment>
    <alignment>center-top</alignment>
    <alignment>center-center</alignment>
    <alignment>center-bottom</alignment>
    <alignment>right-top</alignment>
    <alignment>right-center</alignment>
    <alignment>right-bottom</alignment>
    <alignment>left-baseline</alignment>
    <alignment>center-baseline</alignment>
    <alignment>right-baseline</alignment>
    <alignment>baseline</alignment>
    -->
 
</text>

<animation>
    <type>material</type>
    <object-name>text</object-name>
        <diffuse>
        <red>0.0</red>
        <green>0.0</green>
        <blue>0.0</blue>
    </diffuse>
</animation>

<animation>
    <type>translate</type>
    <object-name>charts</object-name>
    <object-name>chartsscreen</object-name>
    <object-name>checklists</object-name>
    <object-name>welcome</object-name>
    <object-name>time</object-name>
    <object-name>ipad</object-name>
    <object-name>homebutton</object-name>
    <property>aircraft/ipad/drop-current</property>
    <factor>0.1</factor>
    <offset-m>0</offset-m>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>translate</type>
    <object-name>charts</object-name>
    <object-name>chartsscreen</object-name>
    <object-name>checklists</object-name>
    <object-name>welcome</object-name>
    <object-name>time</object-name>
    <object-name>ipad</object-name>
    <object-name>homebutton</object-name>
    <property>aircraft/ipad/drop-current</property>
    <factor>0.319663</factor>
    <offset-m>0</offset-m>
    <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <type>translate</type>
    <object-name>charts</object-name>
    <object-name>chartsscreen</object-name>
    <object-name>checklists</object-name>
    <object-name>welcome</object-name>
    <object-name>time</object-name>
    <object-name>ipad</object-name>
    <object-name>homebutton</object-name>
    <property>aircraft/ipad/drop-current</property>
    <factor>-0.41</factor>
    <offset-m>0</offset-m>
    <axis>
        <x>0</x>
        <y>0</y>
        <z>1</z>
    </axis>
</animation>

<animation>
    <object-name>charts</object-name>
    <object-name>chartsscreen</object-name>
    <object-name>checklists</object-name>
    <object-name>welcome</object-name>
    <object-name>time</object-name>
    <object-name>ipad</object-name>
    <object-name>homebutton</object-name>
    <type>rotate</type>
    <property>aircraft/ipad/drop-current</property>
    <factor>-90</factor>
    <offset-deg>0</offset-deg>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
    <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <object-name>charts</object-name>
    <object-name>chartsscreen</object-name>
    <object-name>checklists</object-name>
    <object-name>welcome</object-name>
    <object-name>time</object-name>
    <object-name>ipad</object-name>
    <object-name>homebutton</object-name>
    <type>rotate</type>
    <property>aircraft/ipad/drop-current</property>
    <factor>45</factor>
    <offset-deg>0</offset-deg>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

    <animation>
        <type>pick</type>
        <object-name>ipad</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>aircraft/ipad/drop-status</property>
                <value>false</value>
            </binding>
        </action>
    </animation>

</PropertyList>