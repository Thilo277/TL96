<!--iPad-->
<filter>
  <name>flipflopinterpolation</name>
  <debug>false</debug>
  <type>gain</type>
  <gain>1.0</gain>
  <input>
    <expression>
      <table>
        <property>gear/gear[1]/compression-norm</property>
        <entry><ind>0.0</ind><dep>0.0</dep></entry>
        <entry><ind>0.59</ind><dep>0.0</dep></entry>
        <entry><ind>0.6</ind><dep>1.0</dep></entry>
        <entry><ind>1.0</ind><dep>1.0</dep></entry>
      </table>
    </expression>
  </input>
  <output>
    <property>aircraft/ipad/drop</property>
  </output>
</filter>

<flipflop>
  <type>RS</type> <!-- or SR -->
  <S>
    <property>aircraft/ipad/drop</property>
  </S>
  <R>
    <property>aircraft/ipad/drop-reset</property>
  </R>
  <output>aircraft/ipad/drop-status</output>
</flipflop>

<filter>
  <type>noise-spike</type>
  <max-rate-of-change>4</max-rate-of-change>
  <input>aircraft/ipad/drop-status</input>
  <output>aircraft/ipad/drop-current</output>
</filter>

