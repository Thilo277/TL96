        <sound>
            <path type="string">Sounds/sound.xml</path>
        </sound>

        <menubar>
            <default>
                <menu n="200">
                    <label>Passenger Controls</label>
                    <enabled type="bool">true</enabled>

                    <item>
                        <label>Select MP pilot</label>
                        <binding>
                            <command>dialog-show</command>
                            <dialog-name>passenger</dialog-name>
                        </binding>
                    </item>

                </menu>
            </default>
        </menubar>

    </sim>

    <aircraft>
        <ipad>
            <ison>0</ison>
            <airac type="string">2306</airac>
        </ipad>
    </aircraft>


    <nasal>
        <passenger>
            <file>Aircraft/TL96/Nasal/passenger.nas</file>
        </passenger>
        <canvas_map>
            <file>Aircraft/TL96/Models/ipad/canvas_map.nas</file>
        </canvas_map>
    </nasal>

